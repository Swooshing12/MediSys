    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:auth="clr-namespace:MediSys.Views.Auth"
    Title="MediSys"
    FlyoutBehavior="Disabled">

    <!-- Login Page como pÃ¡gina inicial -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate auth:LoginPage}"
        Route="login" />

    <!-- ðŸ”¥ NUEVA: Forgot Password Page -->
    <ShellContent
        Title="Forgot Password"
        ContentTemplate="{DataTemplate auth:ForgotPasswordPage}"
        Route="forgotpassword" />

    <!-- ðŸ”¥ NUEVA: Change Password Page -->
    <ShellContent
        Title="Change Password"
        ContentTemplate="{DataTemplate auth:ChangePasswordPage}"
