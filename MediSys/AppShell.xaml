        <FlyoutItem.Icon>
            <FontImageSource Glyph="ðŸ“‹" FontFamily="{OnPlatform iOS=Arial, Android=sans-serif}" Size="18" Color="{StaticResource MedicalTeal}" />
        </FlyoutItem.Icon>
        <ShellContent Title="Historial MÃ©dico"
