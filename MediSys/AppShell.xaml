<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MediSys.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:auth="clr-namespace:MediSys.Views.Auth"
    xmlns:dashboard="clr-namespace:MediSys.Views.Dashboard"
    Title="MediSys"
    FlyoutBehavior="Disabled">

    <!-- Login Page como pÃ¡gina inicial -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate auth:LoginPage}"
        Route="login" />

    <!-- Forgot Password Page -->
    <ShellContent
        Title="Forgot Password"
        ContentTemplate="{DataTemplate auth:ForgotPasswordPage}"
        Route="forgotpassword" />

    <!-- Change Password Page -->
    <ShellContent
        Title="Change Password"
        ContentTemplate="{DataTemplate auth:ChangePasswordPage}"
        Route="changepassword" />

    <!-- ðŸš€ DASHBOARD - Se activa despuÃ©s del login -->
    <TabBar Route="dashboard">
        <ShellContent
            Title="Dashboard"
            Icon="home"
            ContentTemplate="{DataTemplate dashboard:DashboardPage}"
            Route="home" />

        <ShellContent
            Title="Perfil"
            Icon="person"
            ContentTemplate="{DataTemplate dashboard:PerfilPage}"
            Route="perfil" />
    </TabBar>

</Shell>