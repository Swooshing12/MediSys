        <FlyoutItem.Icon>
            <FontImageSource Glyph="ðŸ©º" FontFamily="{OnPlatform iOS=Arial, Android=sans-serif}" Size="18" Color="{StaticResource MedicalGreen}" />
        </FlyoutItem.Icon>
        <ShellContent Title="Mis Citas MÃ©dicas"
