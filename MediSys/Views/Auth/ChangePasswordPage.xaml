<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MediSys.ViewModels"
             x:Class="MediSys.Views.Auth.ChangePasswordPage"
             x:DataType="viewmodels:ChangePasswordViewModel"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{DynamicResource Primary}">

    <ScrollView>
        <!-- Grid principal -->
        <Grid RowDefinitions="1*, Auto, 1*" Padding="40">

            <!-- SECCIÃ“N SUPERIOR: Logo y TÃ­tulos -->
            <Grid Grid.Row="0" VerticalOptions="End">
                <Grid.RowDefinitions>
                    <RowDefinition Height="80" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="20" />
                </Grid.RowDefinitions>

                <!-- Logo -->
                <Image Grid.Row="0"
                       Source="dotnet_bot.png" 
                       Aspect="AspectFit" />

                <!-- TÃ­tulo Principal -->
                <Label Grid.Row="1"
                       Text="MediSys" 
                       FontSize="28" 
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center" />

                <!-- SubtÃ­tulo -->
                <Label Grid.Row="2"
                       Text="Cambiar ContraseÃ±a" 
                       FontSize="16"
                       TextColor="White"
                       Opacity="0.8"
                       HorizontalOptions="Center" />
            </Grid>

            <!-- SECCIÃ“N CENTRAL: Formulario -->
            <Border Grid.Row="1" 
                    BackgroundColor="White"
                    Stroke="Transparent"
                    StrokeThickness="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>

                <!-- Contenido del formulario -->
                <Grid Padding="30" RowDefinitions="Auto,*">

                    <!-- TÃ­tulo del formulario -->
                    <Label Grid.Row="0"
                           Text="Cambiar ContraseÃ±a Temporal" 
                           FontSize="20" 
                           FontAttributes="Bold"
                           TextColor="{DynamicResource Primary}"
                           HorizontalOptions="Center"
                           Margin="0,0,0,20" />

                    <!-- Contenido dinÃ¡mico: Formulario o Ã‰xito -->
                    <Grid Grid.Row="1">

                        <!-- FORMULARIO: Mostrar cuando no se ha cambiado -->
                        <Grid IsVisible="{Binding ShowForm}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="20" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="15" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="15" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="15" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="20" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="20" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="15" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="15" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!-- Instrucciones -->
                            <Label Grid.Row="0"
                                   Text="{Binding InstructionMessage}"
                                   FontSize="14"
                                   TextColor="{DynamicResource Gray600}"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center" />

                            <!-- CAMPO CONTRASEÃ‘A TEMPORAL -->
                            <Grid Grid.Row="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="5" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <Label Grid.Row="0"
                                       Text="ContraseÃ±a Temporal" 
                                       FontSize="14" 
                                       TextColor="{DynamicResource Gray600}" />

                                <Border Grid.Row="2"
                                        BackgroundColor="{DynamicResource Gray100}"
                                        Stroke="Transparent">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="10" />
                                    </Border.StrokeShape>

                                    <Entry x:Name="CurrentPasswordEntry"
                                           Text="{Binding CurrentPassword}"
                                           Placeholder="Clave temporal recibida por email"
                                           IsPassword="True"
                                           BackgroundColor="Transparent"
                                           TextColor="{DynamicResource Black}"
                                           Margin="15,10" />
                                </Border>
                            </Grid>

                            <!-- CAMPO NUEVA CONTRASEÃ‘A -->
                            <Grid Grid.Row="4">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="5" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <Label Grid.Row="0"
                                       Text="Nueva ContraseÃ±a" 
                                       FontSize="14" 
                                       TextColor="{DynamicResource Gray600}" />

                                <Border Grid.Row="2"
                                        BackgroundColor="{DynamicResource Gray100}"
                                        Stroke="Transparent">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="10" />
                                    </Border.StrokeShape>

                                    <Entry x:Name="NewPasswordEntry"
                                           Text="{Binding NewPassword}"
                                           Placeholder="MÃ­nimo 8 caracteres"
                                           IsPassword="True"
                                           BackgroundColor="Transparent"
                                           TextColor="{DynamicResource Black}"
                                           Margin="15,10" />
                                </Border>
                            </Grid>

                            <!-- CAMPO CONFIRMAR CONTRASEÃ‘A -->
                            <Grid Grid.Row="6">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="5" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <Label Grid.Row="0"
                                       Text="Confirmar Nueva ContraseÃ±a" 
                                       FontSize="14" 
                                       TextColor="{DynamicResource Gray600}" />

                                <Border Grid.Row="2"
                                        BackgroundColor="{DynamicResource Gray100}"
                                        Stroke="Transparent">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="10" />
                                    </Border.StrokeShape>

                                    <Entry x:Name="ConfirmPasswordEntry"
                                           Text="{Binding ConfirmPassword}"
                                           Placeholder="Repita la nueva contraseÃ±a"
                                           IsPassword="True"
                                           BackgroundColor="Transparent"
                                           TextColor="{DynamicResource Black}"
                                           Margin="15,10" />
                                </Border>
                            </Grid>

                            <!-- REQUISITOS DE CONTRASEÃ‘A -->
                            <Border Grid.Row="8"
                                    BackgroundColor="{DynamicResource Gray50}"
                                    Stroke="{DynamicResource Gray200}"
                                    StrokeThickness="1"
                                    Padding="15">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8" />
                                </Border.StrokeShape>

                                <StackLayout Spacing="5">
                                    <Label Text="Requisitos de la nueva contraseÃ±a:"
                                           FontSize="12"
                                           FontAttributes="Bold"
                                           TextColor="{DynamicResource Gray600}" />
                                    <Label Text="â€¢ MÃ­nimo 8 caracteres"
                                           FontSize="11"
                                           TextColor="{DynamicResource Gray500}" />
                                    <Label Text="â€¢ Al menos una letra mayÃºscula"
                                           FontSize="11"
                                           TextColor="{DynamicResource Gray500}" />
                                    <Label Text="â€¢ Al menos un nÃºmero"
                                           FontSize="11"
                                           TextColor="{DynamicResource Gray500}" />
                                    <Label Text="â€¢ Al menos un carÃ¡cter especial"
                                           FontSize="11"
                                           TextColor="{DynamicResource Gray500}" />
                                </StackLayout>
                            </Border>

                            <!-- MENSAJE DE ERROR -->
                            <Label Grid.Row="10"
                                   Text="{Binding ErrorMessage}"
                                   IsVisible="{Binding ShowError}"
                                   TextColor="Red"
                                   FontSize="14"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center" />

                            <!-- BOTÃ“N CAMBIAR CONTRASEÃ‘A -->
                            <Button Grid.Row="12"
                                    Text="CAMBIAR CONTRASEÃ‘A"
                                    Command="{Binding ChangePasswordCommand}"
                                    BackgroundColor="{DynamicResource Primary}"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    FontSize="16"
                                    HeightRequest="50">
                                <Button.Shadow>
                                    <Shadow Brush="Black"
                                            Offset="0,2"
                                            Radius="4"
                                            Opacity="0.1" />
                                </Button.Shadow>

                                <Button.Triggers>
                                    <DataTrigger TargetType="Button" 
                                                 Binding="{Binding IsLoading}" 
                                                 Value="True">
                                        <Setter Property="Text" Value="CAMBIANDO..." />
                                        <Setter Property="IsEnabled" Value="False" />
                                        <Setter Property="Opacity" Value="0.7" />
                                    </DataTrigger>
                                </Button.Triggers>
                            </Button>

                            <!-- LOADING INDICATOR -->
                            <ActivityIndicator Grid.Row="14"
                                               IsRunning="{Binding IsLoading}"
                                               IsVisible="{Binding IsLoading}"
                                               Color="{DynamicResource Primary}"
                                               HorizontalOptions="Center" />

                            <!-- VOLVER AL LOGIN -->
                            <Button Grid.Row="16"
                                    Text="â† Cancelar y volver al Login"
                                    Command="{Binding BackToLoginCommand}"
                                    BackgroundColor="Transparent"
                                    TextColor="{DynamicResource Primary}"
                                    FontSize="14"
                                    BorderWidth="0"
                                    Margin="0,10,0,0" />

                        </Grid>

                        <!-- PANTALLA DE Ã‰XITO: Mostrar cuando se cambiÃ³ correctamente -->
                        <Grid IsVisible="{Binding ShowSuccess}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="20" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!-- Icono de Ã©xito -->
                            <Label Grid.Row="0"
                                   Text="ðŸ”"
                                   FontSize="60"
                                   HorizontalOptions="Center" />

                            <!-- TÃ­tulo de Ã©xito -->
                            <Label Grid.Row="2"
                                   Text="Â¡ContraseÃ±a Cambiada!"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource Primary}"
                                   HorizontalOptions="Center" />

                            <!-- Mensaje de Ã©xito -->
                            <Label Grid.Row="4"
                                   Text="{Binding SuccessMessage}"
                                   FontSize="16"
                                   TextColor="{DynamicResource Gray600}"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center" />

                            <!-- BotÃ³n continuar -->
                            <Button Grid.Row="6"
                                    Text="CONTINUAR AL LOGIN"
                                    Command="{Binding BackToLoginCommand}"
                                    BackgroundColor="{DynamicResource Primary}"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    FontSize="16"
                                    HeightRequest="50"
                                    Margin="0,20,0,0" />

                        </Grid>

                    </Grid>
                </Grid>
            </Border>

            <!-- SECCIÃ“N INFERIOR: Copyright -->
            <Grid Grid.Row="2" VerticalOptions="Start">
                <Label Text="Â© 2025 MediSys - Sistema MÃ©dico"
                       TextColor="White"
                       Opacity="0.6"
                       FontSize="12"
                       HorizontalOptions="Center"
                       Margin="0,20,0,0" />
            </Grid>

        </Grid>
    </ScrollView>
</ContentPage>