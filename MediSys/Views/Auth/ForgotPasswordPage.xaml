<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MediSys.ViewModels"
             x:Class="MediSys.Views.Auth.ForgotPasswordPage"
             x:DataType="viewmodels:ForgotPasswordViewModel"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{DynamicResource Primary}">

    <ScrollView>
        <!-- Grid principal -->
        <Grid RowDefinitions="2*, Auto, 1*" Padding="40">

            <!-- SECCIÓN SUPERIOR: Logo y Títulos -->
            <Grid Grid.Row="0" VerticalOptions="End">
                <Grid.RowDefinitions>
                    <RowDefinition Height="120" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>

                <!-- Logo -->
                <Image Grid.Row="0"
                       Source="dotnet_bot.png" 
                       Aspect="AspectFit" />

                <!-- Título Principal -->
                <Label Grid.Row="1"
                       Text="MediSys" 
                       FontSize="32" 
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center" />

                <!-- Subtítulo -->
                <Label Grid.Row="2"
                       Text="Recuperar Contraseña" 
                       FontSize="16"
                       TextColor="White"
                       Opacity="0.8"
                       HorizontalOptions="Center" />
            </Grid>

            <!-- SECCIÓN CENTRAL: Formulario -->
            <Border Grid.Row="1" 
                    BackgroundColor="White"
                    Stroke="Transparent"
                    StrokeThickness="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>

                <!-- Contenido del formulario -->
                <Grid Padding="30" RowDefinitions="Auto,*">

                    <!-- Título del formulario -->
                    <Label Grid.Row="0"
                           Text="¿Olvidaste tu contraseña?" 
                           FontSize="24" 
                           FontAttributes="Bold"
                           TextColor="{DynamicResource Primary}"
                           HorizontalOptions="Center"
                           Margin="0,0,0,20" />

                    <!-- Contenido dinámico: Formulario o Éxito -->
                    <Grid Grid.Row="1">

                        <!-- FORMULARIO: Mostrar cuando no se ha enviado -->
                        <Grid IsVisible="{Binding ShowForm}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="20" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="20" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="20" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="20" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!-- Instrucciones -->
                            <Label Grid.Row="0"
                                   Text="Ingresa tu correo electrónico y te enviaremos una clave temporal para recuperar tu cuenta."
                                   FontSize="14"
                                   TextColor="{DynamicResource Gray600}"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center" />

                            <!-- CAMPO EMAIL -->
                            <Grid Grid.Row="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="5" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <Label Grid.Row="0"
                                       Text="Correo Electrónico" 
                                       FontSize="14" 
                                       TextColor="{DynamicResource Gray600}" />

                                <Border Grid.Row="2"
                                        BackgroundColor="{DynamicResource Gray100}"
                                        Stroke="Transparent">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="10" />
                                    </Border.StrokeShape>

                                    <Entry x:Name="EmailEntry"
                                           Text="{Binding Email}"
                                           Placeholder="ejemplo@correo.com"
                                           Keyboard="Email"
                                           BackgroundColor="Transparent"
                                           TextColor="{DynamicResource Black}"
                                           Margin="15,10" />
                                </Border>
                            </Grid>

                            <!-- MENSAJE DE ERROR -->
                            <Label Grid.Row="4"
                                   Text="{Binding ErrorMessage}"
                                   IsVisible="{Binding ShowError}"
                                   TextColor="Red"
                                   FontSize="14"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center" />

                            <!-- BOTÓN ENVIAR -->
                            <Button Grid.Row="6"
                                    Text="ENVIAR CLAVE TEMPORAL"
                                    Command="{Binding SendRecoveryCommand}"
                                    BackgroundColor="{DynamicResource Primary}"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    FontSize="16"
                                    HeightRequest="50">
                                <Button.Shadow>
                                    <Shadow Brush="Black"
                                            Offset="0,2"
                                            Radius="4"
                                            Opacity="0.1" />
                                </Button.Shadow>

                                <Button.Triggers>
                                    <DataTrigger TargetType="Button" 
                                                 Binding="{Binding IsLoading}" 
                                                 Value="True">
                                        <Setter Property="Text" Value="ENVIANDO..." />
                                        <Setter Property="IsEnabled" Value="False" />
                                        <Setter Property="Opacity" Value="0.7" />
                                    </DataTrigger>
                                </Button.Triggers>
                            </Button>

                            <!-- LOADING INDICATOR -->
                            <ActivityIndicator Grid.Row="8"
                                               IsRunning="{Binding IsLoading}"
                                               IsVisible="{Binding IsLoading}"
                                               Color="{DynamicResource Primary}"
                                               HorizontalOptions="Center" />

                            <!-- VOLVER AL LOGIN -->
                            <Button Grid.Row="10"
                                    Text="← Volver al Login"
                                    Command="{Binding BackToLoginCommand}"
                                    BackgroundColor="Transparent"
                                    TextColor="{DynamicResource Primary}"
                                    FontSize="14"
                                    BorderWidth="0"
                                    Margin="0,10,0,0" />

                        </Grid>

                        <!-- PANTALLA DE ÉXITO: Mostrar cuando se envió correctamente -->
                        <Grid IsVisible="{Binding ShowSuccess}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="20" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!-- Icono de éxito -->
                            <Label Grid.Row="0"
                                   Text="✅"
                                   FontSize="60"
                                   HorizontalOptions="Center" />

                            <!-- Título de éxito -->
                            <Label Grid.Row="2"
                                   Text="¡Solicitud Enviada!"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource Primary}"
                                   HorizontalOptions="Center" />

                            <!-- Mensaje de éxito -->
                            <Label Grid.Row="4"
                                   Text="{Binding SuccessMessage}"
                                   FontSize="16"
                                   TextColor="{DynamicResource Gray600}"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center" />

                            <!-- Botón volver -->
                            <Button Grid.Row="6"
                                    Text="VOLVER AL LOGIN"
                                    Command="{Binding BackToLoginCommand}"
                                    BackgroundColor="{DynamicResource Primary}"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    FontSize="16"
                                    HeightRequest="50"
                                    Margin="0,20,0,0" />

                        </Grid>

                    </Grid>
                </Grid>
            </Border>

            <!-- SECCIÓN INFERIOR: Copyright -->
            <Grid Grid.Row="2" VerticalOptions="Start">
                <Label Text="© 2025 MediSys - Sistema Médico"
                       TextColor="White"
                       Opacity="0.6"
                       FontSize="12"
                       HorizontalOptions="Center"
                       Margin="0,40,0,0" />
            </Grid>

        </Grid>
    </ScrollView>
</ContentPage>