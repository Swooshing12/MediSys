    <ScrollView>
        <StackLayout Padding="20" Spacing="20">

            <!-- HEADER -->
            <Frame BackgroundColor="White" 
                   CornerRadius="16" 
                   HasShadow="True" 
                   Padding="25">
                <StackLayout Spacing="10">
                    <Label Text="ðŸ” Consultar MÃ©dico por CÃ©dula" 
