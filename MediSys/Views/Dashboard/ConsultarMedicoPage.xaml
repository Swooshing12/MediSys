                    <Button Text="âœï¸ Configurar Horarios"
                            BackgroundColor="#F39C12"
                            TextColor="White"
                            FontSize="14"
                            FontAttributes="Bold"
                            CornerRadius="8"
                            HeightRequest="40"
                            HorizontalOptions="Center"
                            Command="{Binding IniciarEdicionCommand}" />
                </StackLayout>
            </Frame>

            <!-- INDICADOR DE CARGA -->
            <ActivityIndicator IsVisible="{Binding IsLoading}" 
                             IsRunning="{Binding IsLoading}"
                             Color="#3498DB"
                             HeightRequest="50" />

        </StackLayout>
    </ScrollView>

</ContentPage>