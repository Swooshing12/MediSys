<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MediSys.ViewModels"
             x:Class="MediSys.Views.Dashboard.DashboardPage"
             x:DataType="viewmodels:DashboardViewModel"
             Title="Dashboard"
             BackgroundColor="#F8F9FA">

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Colores médicos profesionales -->
            <Color x:Key="MedicalBlue">#2E86AB</Color>
            <Color x:Key="MedicalTeal">#A23B72</Color>
            <Color x:Key="MedicalGreen">#F18F01</Color>
            <Color x:Key="MedicalWhite">#FFFFFF</Color>
            <Color x:Key="MedicalGray">#F8F9FA</Color>
            <Color x:Key="MedicalDarkBlue">#1A5A7A</Color>
            <Color x:Key="TextDark">#2C3E50</Color>
            <Color x:Key="TextLight">#7F8C8D</Color>
            <Color x:Key="CardBackground">#FFFFFF</Color>
            <Color x:Key="AccentGreen">#27AE60</Color>
            <Color x:Key="AccentOrange">#F39C12</Color>
            <Color x:Key="AccentPurple">#9B59B6</Color>
            <Color x:Key="AccentRed">#E74C3C</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <StackLayout Padding="20" Spacing="25">

            <!-- HEADER DE BIENVENIDA SIMPLE Y ELEGANTE -->
            <Border BackgroundColor="{StaticResource CardBackground}"
                    Stroke="Transparent"
                    StrokeThickness="0"
                    Padding="25">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.08" Radius="15" Offset="0,5" />
                </Border.Shadow>

                <Grid ColumnDefinitions="*,Auto">
                    <!-- Información del usuario -->
                    <StackLayout Grid.Column="0" Spacing="12" VerticalOptions="Center">
                        <Label Text="{Binding WelcomeMessage}" 
                               FontSize="26" 
                               FontAttributes="Bold" 
                               TextColor="{StaticResource TextDark}" />

                        <Label Text="{Binding CurrentDateTime}" 
                               FontSize="15" 
                               TextColor="{StaticResource TextLight}" />

                        <!-- Badge del rol - más sutil -->
                        <Border BackgroundColor="{StaticResource MedicalBlue}"
                                Stroke="Transparent"
                                HorizontalOptions="Start"
                                Padding="12,6">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12" />
                            </Border.StrokeShape>
                            <Label Text="{Binding UserRole}" 
                                   TextColor="White" 
                                   FontSize="12" 
                                   FontAttributes="Bold" />
                        </Border>
                    </StackLayout>

                    <!-- Avatar elegante -->
                    <Border Grid.Column="1"
                            BackgroundColor="{StaticResource MedicalBlue}"
                            Stroke="Transparent"
                            HeightRequest="75" 
                            WidthRequest="75"
                            VerticalOptions="Center">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="37" />
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="{StaticResource MedicalBlue}" Opacity="0.3" Radius="12" Offset="0,4" />
                        </Border.Shadow>
                        <Label Text="{Binding UserInitials}" 
                               FontSize="22" 
                               FontAttributes="Bold" 
                               TextColor="White" 
                               HorizontalOptions="Center" 
                               VerticalOptions="Center" />
                    </Border>
                </Grid>
            </Border>

            <!-- TARJETAS DE ESTADÍSTICAS MÉDICAS -->
            <Grid RowDefinitions="*,*" 
                  ColumnDefinitions="*,*" 
                  RowSpacing="15" 
                  ColumnSpacing="15">

                <!-- Total Citas -->
                <Border Grid.Row="0" Grid.Column="0"
                        BackgroundColor="{StaticResource CardBackground}"
                        Stroke="Transparent"
                        Padding="20">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.08" Radius="12" Offset="0,4" />
                    </Border.Shadow>

                    <StackLayout Spacing="10" VerticalOptions="Center">
                        <Border BackgroundColor="{StaticResource AccentGreen}"
                                WidthRequest="50"
                                HeightRequest="50"
                                HorizontalOptions="Center">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="25" />
                            </Border.StrokeShape>
                            <Label Text="📅" 
                                   FontSize="24" 
                                   TextColor="White"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Border>

                        <Label Text="{Binding TotalCitas}" 
                               FontSize="28" 
                               FontAttributes="Bold" 
                               TextColor="{StaticResource AccentGreen}" 
                               HorizontalOptions="Center" />

                        <Label Text="Total Citas" 
                               FontSize="12" 
                               TextColor="{StaticResource TextLight}" 
                               HorizontalOptions="Center" 
                               FontAttributes="Bold" />
                    </StackLayout>
                </Border>

                <!-- Citas Pendientes -->
                <Border Grid.Row="0" Grid.Column="1"
                        BackgroundColor="{StaticResource CardBackground}"
                        Stroke="Transparent"
                        Padding="20">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.08" Radius="12" Offset="0,4" />
                    </Border.Shadow>

                    <StackLayout Spacing="10" VerticalOptions="Center">
                        <Border BackgroundColor="{StaticResource AccentOrange}"
                                WidthRequest="50"
                                HeightRequest="50"
                                HorizontalOptions="Center">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="25" />
                            </Border.StrokeShape>
                            <Label Text="⏰" 
                                   FontSize="24" 
                                   TextColor="White"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Border>

                        <Label Text="{Binding CitasPendientes}" 
                               FontSize="28" 
                               FontAttributes="Bold" 
                               TextColor="{StaticResource AccentOrange}" 
                               HorizontalOptions="Center" />

                        <Label Text="Pendientes" 
                               FontSize="12" 
                               TextColor="{StaticResource TextLight}" 
                               HorizontalOptions="Center" 
                               FontAttributes="Bold" />
                    </StackLayout>
                </Border>

                <!-- Historial Consultado -->
                <Border Grid.Row="1" Grid.Column="0"
                        BackgroundColor="{StaticResource CardBackground}"
                        Stroke="Transparent"
                        Padding="20"
                        IsVisible="{Binding CanViewHistorial}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.08" Radius="12" Offset="0,4" />
                    </Border.Shadow>

                    <StackLayout Spacing="10" VerticalOptions="Center">
                        <Border BackgroundColor="{StaticResource MedicalBlue}"
                                WidthRequest="50"
                                HeightRequest="50"
                                HorizontalOptions="Center">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="25" />
                            </Border.StrokeShape>
                            <Label Text="📋" 
                                   FontSize="24" 
                                   TextColor="White"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Border>

                        <Label Text="{Binding HistorialesConsultados}" 
                               FontSize="28" 
                               FontAttributes="Bold" 
                               TextColor="{StaticResource MedicalBlue}" 
                               HorizontalOptions="Center" />

                        <Label Text="Historiales" 
                               FontSize="12" 
                               TextColor="{StaticResource TextLight}" 
                               HorizontalOptions="Center" 
                               FontAttributes="Bold" />
                    </StackLayout>
                </Border>

                <!-- Citas de Hoy (Solo médicos) -->
                <Border Grid.Row="1" Grid.Column="1"
                        BackgroundColor="{StaticResource CardBackground}"
                        Stroke="Transparent"
                        Padding="20"
                        IsVisible="{Binding IsMedico}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.08" Radius="12" Offset="0,4" />
                    </Border.Shadow>

                    <StackLayout Spacing="10" VerticalOptions="Center">
                        <Border BackgroundColor="{StaticResource AccentPurple}"
                                WidthRequest="50"
                                HeightRequest="50"
                                HorizontalOptions="Center">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="25" />
                            </Border.StrokeShape>
                            <Label Text="🩺" 
                                   FontSize="24" 
                                   TextColor="White"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Border>

                        <Label Text="{Binding MisCitasHoy}" 
                               FontSize="28" 
                               FontAttributes="Bold" 
                               TextColor="{StaticResource AccentPurple}" 
                               HorizontalOptions="Center" />

                        <Label Text="Citas Hoy" 
                               FontSize="12" 
                               TextColor="{StaticResource TextLight}" 
                               HorizontalOptions="Center" 
                               FontAttributes="Bold" />
                    </StackLayout>
                </Border>
            </Grid>

            <!-- ACCIONES RÁPIDAS MÉDICAS -->
            <Border BackgroundColor="{StaticResource CardBackground}"
                    Stroke="Transparent"
                    Padding="25">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.08" Radius="15" Offset="0,5" />
                </Border.Shadow>

                <StackLayout Spacing="20">
                    <Label Text="Acciones Rápidas" 
                           FontSize="20" 
                           FontAttributes="Bold" 
                           TextColor="{StaticResource TextDark}" />

                    <Grid RowDefinitions="Auto,Auto" 
                          ColumnDefinitions="*,*" 
                          RowSpacing="15" 
                          ColumnSpacing="15">

                        <!-- Consultar Historial -->
                        <Border Grid.Row="0" Grid.Column="0"
                                StrokeThickness="0"
                                IsVisible="{Binding CanViewHistorial}">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="{StaticResource AccentGreen}" Offset="0.0" />
                                    <GradientStop Color="#229954" Offset="1.0" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="15" />
                            </Border.StrokeShape>
                            <Border.Shadow>
                                <Shadow Brush="{StaticResource AccentGreen}" Opacity="0.3" Radius="10" Offset="0,4" />
                            </Border.Shadow>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToHistorialCommand}" />
                            </Border.GestureRecognizers>

                            <StackLayout Spacing="8" Padding="20" VerticalOptions="Center">
                                <Label Text="📋" 
                                       FontSize="26" 
                                       HorizontalOptions="Center"
                                       TextColor="White" />
                                <Label Text="Consultar Historial" 
                                       FontSize="13" 
                                       FontAttributes="Bold" 
                                       TextColor="White" 
                                       HorizontalOptions="Center" 
                                       HorizontalTextAlignment="Center" />
                            </StackLayout>
                        </Border>

                        <!-- Consultar Citas
                        <Border Grid.Row="0" Grid.Column="1"
                                StrokeThickness="0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="{StaticResource MedicalBlue}" Offset="0.0" />
                                    <GradientStop Color="{StaticResource MedicalDarkBlue}" Offset="1.0" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="15" />
                            </Border.StrokeShape>
                            <Border.Shadow>
                                <Shadow Brush="{StaticResource MedicalBlue}" Opacity="0.3" Radius="10" Offset="0,4" />
                            </Border.Shadow>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToCitasCommand}" />
                            </Border.GestureRecognizers>

                            <StackLayout Spacing="8" Padding="20" VerticalOptions="Center">
                                <Label Text="📅" 
                                       FontSize="26" 
                                       HorizontalOptions="Center"
                                       TextColor="White" />
                                <Label Text="Consultar Citas" 
                                       FontSize="13" 
                                       FontAttributes="Bold" 
                                       TextColor="White" 
                                       HorizontalOptions="Center" 
                                       HorizontalTextAlignment="Center" />
                            </StackLayout>
                        </Border>
                         -->

                        <!-- Mi Perfil -->
                        <Border Grid.Row="1" Grid.Column="0"
                                StrokeThickness="0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="{StaticResource AccentPurple}" Offset="0.0" />
                                    <GradientStop Color="#8E44AD" Offset="1.0" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="15" />
                            </Border.StrokeShape>
                            <Border.Shadow>
                                <Shadow Brush="{StaticResource AccentPurple}" Opacity="0.3" Radius="10" Offset="0,4" />
                            </Border.Shadow>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToPerfilCommand}" />
                            </Border.GestureRecognizers>

                            <StackLayout Spacing="8" Padding="20" VerticalOptions="Center">
                                <Label Text="👤" 
                                       FontSize="26" 
                                       HorizontalOptions="Center"
                                       TextColor="White" />
                                <Label Text="Mi Perfil" 
                                       FontSize="13" 
                                       FontAttributes="Bold" 
                                       TextColor="White" 
                                       HorizontalOptions="Center" 
                                       HorizontalTextAlignment="Center" />
                            </StackLayout>
                        </Border>

                        <!-- Mis Citas (Solo médicos) -->
                        <Border Grid.Row="1" Grid.Column="1"
                                StrokeThickness="0"
                                IsVisible="{Binding IsMedico}">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="{StaticResource AccentRed}" Offset="0.0" />
                                    <GradientStop Color="#C0392B" Offset="1.0" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="15" />
                            </Border.StrokeShape>
                            <Border.Shadow>
                                <Shadow Brush="{StaticResource AccentRed}" Opacity="0.3" Radius="10" Offset="0,4" />
                            </Border.Shadow>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToMisCitasCommand}" />
                            </Border.GestureRecognizers>

                            <StackLayout Spacing="8" Padding="20" VerticalOptions="Center">
                                <Label Text="🩺" 
                                       FontSize="26" 
                                       HorizontalOptions="Center"
                                       TextColor="White" />
                                <Label Text="Mis Citas Médicas" 
                                       FontSize="13" 
                                       FontAttributes="Bold" 
                                       TextColor="White" 
                                       HorizontalOptions="Center" 
                                       HorizontalTextAlignment="Center" />
                            </StackLayout>
                        </Border>
                    </Grid>
                </StackLayout>
            </Border>

            <!-- INFORMACIÓN DEL SISTEMA -->
            <Border BackgroundColor="{StaticResource CardBackground}"
                    Stroke="Transparent"
                    Padding="25">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.08" Radius="15" Offset="0,5" />
                </Border.Shadow>

                <StackLayout Spacing="15">
                    <Label Text="Estado del Sistema" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="{StaticResource TextDark}" />

                    <StackLayout Spacing="12">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <Border Grid.Column="0"
                                    BackgroundColor="#2ECC71"
                                    WidthRequest="12"
                                    HeightRequest="12">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="6" />
                                </Border.StrokeShape>
                            </Border>
                            <Label Grid.Column="1" 
                                   Text="Sistema Conectado" 
                                   FontSize="14" 
                                   TextColor="{StaticResource TextDark}"
                                   VerticalOptions="Center"
                                   Margin="12,0,0,0" />
                            <Label Grid.Column="2" 
                                   Text="Online" 
                                   FontSize="12" 
                                   FontAttributes="Bold"
                                   TextColor="#2ECC71" 
                                   VerticalOptions="Center" />
                        </Grid>

                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <Label Grid.Column="0" 
                                   Text="🔐" 
                                   FontSize="12" 
                                   VerticalOptions="Center" />
                            <Label Grid.Column="1" 
                                   Text="Conexión Segura SSL" 
                                   FontSize="14" 
                                   TextColor="{StaticResource TextLight}"
                                   VerticalOptions="Center"
                                   Margin="8,0,0,0" />
                            <Label Grid.Column="2" 
                                   Text="v1.0.0" 
                                   FontSize="12" 
                                   TextColor="{StaticResource TextLight}" 
                                   VerticalOptions="Center" />
                        </Grid>

                        <Grid ColumnDefinitions="Auto,*">
                            <Label Grid.Column="0" 
                                   Text="🔄" 
                                   FontSize="12" 
                                   VerticalOptions="Center" />
                            <Label Grid.Column="1" 
                                   Text="{Binding LastSyncTime, StringFormat='Última sincronización: {0}'}" 
                                   FontSize="13" 
                                   TextColor="{StaticResource TextLight}"
                                   VerticalOptions="Center"
                                   Margin="8,0,0,0" />
                        </Grid>
                    </StackLayout>
                </StackLayout>
            </Border>

        </StackLayout>
    </ScrollView>
</ContentPage>