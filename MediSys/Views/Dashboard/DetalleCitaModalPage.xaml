                                   TextColor="{StaticResource MedicalBlue}" />
                        </StackLayout>
                    </StackLayout>
                    
                    <Frame Grid.Column="1"
                           BackgroundColor="{Binding Cita.EstadoColor}" 
                           CornerRadius="12" 
                           Padding="8,4"
                           HasShadow="False">
                        <Label Text="{Binding Cita.Estado}" 
                               FontSize="10" 
                               FontAttributes="Bold" 
                               TextColor="White" />
                    </Frame>
                </Grid>
            </Frame>

            <!-- MÃ‰DICO COMPACTO -->
