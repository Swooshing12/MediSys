                           VerticalOptions="Center" />
                </StackLayout>
            </Frame>

            <!-- INFO CITA COMPACTA -->
            <Frame Style="{StaticResource MedicalCardStyle}">
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
