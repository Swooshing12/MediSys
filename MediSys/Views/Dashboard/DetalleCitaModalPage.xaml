                               VerticalOptions="Center" />
                    </StackLayout>

                    <StackLayout Spacing="6">
                        <StackLayout Orientation="Horizontal" Spacing="8">
                            <Label Text="ðŸ©º" FontSize="14" />
                            <Label Text="{Binding Cita.DoctorCompleto}" 
                                   FontSize="13" 
