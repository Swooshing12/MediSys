<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MediSys.Views.Modals.AgregarHorarioModalPage"
             Title="Agregar Horario"
             BackgroundColor="#80000000">

    <Frame BackgroundColor="White" 
           CornerRadius="20" 
           Margin="20"
           VerticalOptions="Center"
           HasShadow="True">

        <ScrollView>
            <StackLayout Spacing="20" Padding="25">

                <!-- HEADER DEL MODAL -->
                <StackLayout Spacing="10">
                    <Label Text="‚è∞ Configurar Horario de Atenci√≥n" 
                           FontSize="20" 
                           FontAttributes="Bold" 
                           TextColor="#2C3E50" 
                           HorizontalOptions="Center" />

                    <Label Text="Configure los d√≠as y horarios de trabajo del m√©dico" 
                           FontSize="14" 
                           TextColor="#7F8C8D" 
                           HorizontalOptions="Center" 
                           HorizontalTextAlignment="Center" />
                </StackLayout>

                <!-- SELECCI√ìN DE SUCURSAL -->
                <StackLayout Spacing="8">
                    <Label Text="üè¢ Sucursal *" 
                           FontSize="16" 
                           FontAttributes="Bold" 
                           TextColor="#34495E" />

                    <Frame BackgroundColor="#ECF0F1" 
                           CornerRadius="10" 
                           Padding="0" 
                           HasShadow="False">
                        <Picker x:Name="SucursalPicker"
                                Title="Seleccione una sucursal"
                                FontSize="16"
                                TextColor="#2C3E50" />
                    </Frame>
                </StackLayout>

                <!-- SELECCI√ìN DE D√çA -->
                <StackLayout Spacing="8">
                    <Label Text="üìÖ D√≠a de la Semana *" 
                           FontSize="16" 
                           FontAttributes="Bold" 
                           TextColor="#34495E" />

                    <Frame BackgroundColor="#ECF0F1" 
                           CornerRadius="10" 
                           Padding="0" 
                           HasShadow="False">
                        <Picker x:Name="DiaPicker"
                                Title="Seleccione el d√≠a"
                                FontSize="16"
                                TextColor="#2C3E50">
                            <Picker.ItemsSource>
                                <x:Array Type="{x:Type x:String}">
                                    <x:String>Lunes</x:String>
                                    <x:String>Martes</x:String>
                                    <x:String>Mi√©rcoles</x:String>
                                    <x:String>Jueves</x:String>
                                    <x:String>Viernes</x:String>
                                    <x:String>S√°bado</x:String>
                                    <x:String>Domingo</x:String>
                                </x:Array>
                            </Picker.ItemsSource>
                        </Picker>
                    </Frame>
                </StackLayout>

                <!-- HORARIOS -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                    <!-- HORA INICIO -->
                    <StackLayout Grid.Column="0" Spacing="8">
                        <Label Text="üïê Hora Inicio *" 
                               FontSize="16" 
                               FontAttributes="Bold" 
                               TextColor="#34495E" />

                        <Frame BackgroundColor="#E8F6F3" 
                               CornerRadius="10" 
                               Padding="12" 
                               HasShadow="False">
                            <TimePicker x:Name="HoraInicioPicker"
                                        Time="08:00:00"
                                        FontSize="16"
                                        TextColor="#16A085" />
                        </Frame>
                    </StackLayout>

                    <!-- HORA FIN -->
                    <StackLayout Grid.Column="1" Spacing="8">
                        <Label Text="üïï Hora Fin *" 
                               FontSize="16" 
                               FontAttributes="Bold" 
                               TextColor="#34495E" />

                        <Frame BackgroundColor="#FDF2E9" 
                               CornerRadius="10" 
                               Padding="12" 
                               HasShadow="False">
                            <TimePicker x:Name="HoraFinPicker"
                                        Time="17:00:00"
                                        FontSize="16"
                                        TextColor="#E67E22" />
                        </Frame>
                    </StackLayout>
                </Grid>

                <!-- DURACI√ìN DE CITA -->
                <StackLayout Spacing="8">
                    <Label Text="‚è±Ô∏è Duraci√≥n por Cita (minutos)" 
                           FontSize="16" 
                           FontAttributes="Bold" 
                           TextColor="#34495E" />

                    <Frame BackgroundColor="#EBF3FD" 
                           CornerRadius="10" 
                           Padding="0" 
                           HasShadow="False">
                        <Picker x:Name="DuracionPicker"
                                SelectedIndex="2"
                                FontSize="16"
                                TextColor="#3498DB">
                            <Picker.ItemsSource>
                                <x:Array Type="{x:Type x:String}">
                                    <x:String>15 minutos</x:String>
                                    <x:String>20 minutos</x:String>
                                    <x:String>30 minutos</x:String>
                                    <x:String>45 minutos</x:String>
                                    <x:String>60 minutos</x:String>
                                </x:Array>
                            </Picker.ItemsSource>
                        </Picker>
                    </Frame>
                </StackLayout>

                <!-- VISTA PREVIA -->
                <Frame BackgroundColor="#F8F9FA" 
                       CornerRadius="12" 
                       Padding="15"
                       IsVisible="{Binding Source={x:Reference DiaPicker}, Path=SelectedIndex, Converter={StaticResource IntToBoolConverter}}">
                    <StackLayout Spacing="8">
                        <Label Text="üëÅÔ∏è Vista Previa del Horario" 
                               FontSize="14" 
                               FontAttributes="Bold" 
                               TextColor="#2C3E50" />

                        <Label x:Name="VistaPrevia" 
                               Text="Seleccione todos los campos para ver la vista previa" 
                               FontSize="14" 
                               TextColor="#7F8C8D" 
                               HorizontalTextAlignment="Center" />

                        <Label x:Name="CitasEstimadas" 
                               Text="Citas estimadas: --" 
                               FontSize="12" 
                               TextColor="#3498DB" 
                               HorizontalOptions="Center" />
                    </StackLayout>
                </Frame>

                <!-- BOTONES -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="15" Margin="0,10,0,0">
                    <Button Grid.Column="0"
                            Text="‚ùå Cancelar"
                            BackgroundColor="#E74C3C"
                            TextColor="White"
                            FontSize="16"
                            FontAttributes="Bold"
                            CornerRadius="10"
                            HeightRequest="50"
                            Clicked="OnCancelarClicked" />

                    <Button Grid.Column="1"
                            Text="‚úÖ Guardar"
                            BackgroundColor="#27AE60"
                            TextColor="White"
                            FontSize="16"
                            FontAttributes="Bold"
                            CornerRadius="10"
                            HeightRequest="50"
                            Clicked="OnGuardarClicked" />
                </Grid>

            </StackLayout>
        </ScrollView>

    </Frame>

</ContentPage>